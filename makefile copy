CC := g++
CFLAGS := -g -O2 -std=c++1z -pthread -march=native
LIBS := -lntl -lgmp -lm
TARGET := build

SRCS := $(wildcard src/*.cpp)
OBJS := $(patsubst %.cpp,%.o,$(SRCS))

all: $(TARGET) 
$(TARGET): $(OBJS)
	$(CC) -o $@ $^
%.o: %.cpp
	$(CC) $(CFLAGS) -c $< $(LIBS)

clean:
	rm build/*

.PHONY: all clean
